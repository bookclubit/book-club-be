{
  "name": "book-club-be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "bun run prisma:gen && bunx nest build",
    "start": "bun src/main.ts",
    "start:dev": "bun --hot src/main.ts",
    "start:debug": "bun --inspect --hot src/main.ts",
    "start:prod": "bun dist/main.js",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "lint-full:fix": "bun lint:fix ; prettier . --write",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "bun --inspect-brk node_modules/.bin/bun-test",
    "test:e2e": "bun test test/**/*.e2e-spec.ts",
    "prisma": "dotenv -e .env -- bunx prisma",
    "prisma:gen": "bun run prisma generate",
    "prisma:migrate": "bun run prisma migrate dev"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.19.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bun": "^1.3.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^11.0.0",
    "oxfmt": "^0.13.0",
    "oxlint": "^1.28.0",
    "oxlint-tsgolint": "^0.6.0",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3"
  }
}
