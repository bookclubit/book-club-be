{
  // 1. Prettier — наш форматер ПО УМОЛЧАНИЮ для "большего списка"
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // 2. Отключаем встроенный TS-форматтер (все еще нужно)
  "typescript.format.enable": false,

  // 3. Настройки Oxc (пути к конфигам, если они вам нужны)
  "oxc.enable": true,
  "oxc.lint.run": "onType",
  "oxc.fmt.experimental": true,
  "oxc.configPath": ".oxlintrc.json",
  "oxc.fmt.configPath": ".oxfmtrc.jsonc",

  // 4. ИСКЛЮЧЕНИЯ: "Меньший список" отдаем Oxc
  "[javascript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  }
}
